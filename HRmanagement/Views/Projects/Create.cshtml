@model IEnumerable<HRmanagement.Models.Department>
@{
    ViewData["Title"] = "Create";
}

<h1>Create Project</h1>

@using (Html.BeginForm("Insert", "Projects"))
{
    <div class="form-group">
        <label for="project-name">Name</label>
        <input type="text" id="project-name" class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="project-address">Address</label>
        <input type="text" id="procejt-address" class="form-control" name="Address" />
    </div>

    <label for="Department">Choose Department:</label>

    <select id="Department" name="Department">
        @foreach (var d in Model)
        {
            <option value="@d.ID">@d.Name</option>
        }
    </select>
    <input type="submit" value="Enter" />
}

