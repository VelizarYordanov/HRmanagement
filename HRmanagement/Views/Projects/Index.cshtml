@model IEnumerable<HRmanagement.BLL.DTO.Projects.ProjectDepartmentDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>Projects</h1>

<table class="table table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Department
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach (var p in Model)
    {
<tr>
    <td>
        @p.Name
    </td>
    <td>
        @p.Address
    </td>
    <td>
        @p.BelongsToDepartment.Name
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", "Projects", new { ProjectID = @p.ID })
    </td>
</tr>
    }
</table>

