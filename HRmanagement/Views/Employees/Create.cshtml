@model IEnumerable<HRmanagement.Models.Department>
@{
    ViewData["Title"] = "Create";
}

<h1>Add Employee</h1>

@using (Html.BeginForm("Insert", "Employees"))
{

    <div class="form-group">
        <label for="employee-name">Name</label>
        <input type="text" id="employee-name" class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="employee-address">Address</label>
        <input type="text" id="employee-address" class="form-control" name="Address" />
    </div>
    <div>
        <p>Gender</p>
        <input type="radio" id="male" name="Gender" value="Male" required />
        <label for="male">Male</label>
        <input type="radio" id="female" name="Gender" value="Female" required />
        <label for="female">Female</label>
    </div>
    <div class="form-group">
        <label for="employee-doj">Date of joining</label>
        <input type="text" class="datepicker form-control" name="Doj" autocomplete="off" required>
    </div>
    <div class="form-group">
        <label for="employee-dob">Date of birth</label>
        <input type="text" class="datepicker form-control" name="Dob" autocomplete="off" required>
    </div>

    <label for="Department">Choose Department:</label>

    <select id="Department" name="Department">
        @foreach (var d in Model)
        {
            <option value="@d.ID">@d.Name</option>
        }
    </select>
    <input type="submit" value="Enter" />

    @section Scripts {
        <script>
            $(".datepicker").datepicker(
                {
                    dateFormat: "yy/mm/dd",
                    changeMonth: true,
                    changeYear: true
                });
        </script>
    }
}


