
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@using (Html.BeginForm("Authenticate", "UserManagement"))
{
        <div class="form-group">
            <label for="exampleInputEmail1">Username or Email</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="UserName">
            <small id="emailHelp" class="form-text text-muted" >We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="Password">
        </div>
        <div class="form-group">
            <input name="StayLogged" type="checkbox" value="false" onchange="this.value=this.checked">
            <label for="StayLogged">Keep me logged in</label>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
}
