@model IEnumerable<HRmanagement.Models.Department>
@{
    ViewData["Title"] = "Index";
}

<h1>List Of Departments</h1>

<table class="table table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>
                @d.Name
            </td>
            <td>
                @d.Address
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Departments", new { departmentId = d.ID })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Departments", new { departmentId = @d.ID })
            </td>
        </tr>
    }
</table>
