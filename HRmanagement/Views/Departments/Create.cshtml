
@{
    ViewData["Title"] = "Create";
}

<h1>Create Department</h1>

@using (Html.BeginForm("Insert", "Departments")) {

    <div class="form-group">
        <label for="department-name">Name</label>
        <input type="text" id="department-name" class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="department-address">Address</label>
        <input type="text" class="form-control" id="department-address" name="Address"/>
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
}

